@model IEnumerable<Student>
@{
	ViewData["Title"] = "Index";
	Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Şagirdlər Listi</h1>
<hr />
@Html.ActionLink("Yarat", "Create", null,"Student", new { @class = "btn btn-sm btn-dark btn-cr mt-3" })

<br />
<br />
<table class="table table-bordered">

	<thead>
		<tr>
			<th>Adı</th>
			<th>Soyadı</th>
			<th>Email ünvanı</th>
			<th>Telefon nömrəsi</th>
			<th>Əməliyyatlar</th>

		</tr>

	</thead>

	<tbody>

		@if(!Model.Any())
			{
				<tr>
					<td colspan="5" class="text-center">Heç bir məlumat yoxdur</td>
				</tr>
			}
		@foreach (var item in Model)
		{
			<tr>
				<td>@item.StudentName</td>
				<td>@item.StudentSurname</td>
				<td>@item.Email</td>
				<td>@item.PhoneNumber</td>


				<td>
					@Html.ActionLink("Yenilə", "Update", "Student", new { id = item.StudentId }, new { @class = "btn btn-sm btn-primary d-inline" })
					<form asp-action="Delete" asp-controller="Student" asp-route-id="@item.StudentId" method="post" class="d-inline" onsubmit="return confirm('Silmək istədiyinizə əminsiniz?')">
						<button type="submit" class="btn btn-sm btn-danger">Sil</button>
					</form>
				</td>
			</tr>
		}

	</tbody>
</table>

